<resources>


    <!-- Light base activity theme -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/grey900</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">@color/colorPrimaryNight</item>
        <item name="secondaryTextColor">@color/colorPrimaryDarkNight</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:statusBarColor">@color/grey900</item>
        <item name="android:textColor">@color/colorPrimaryNight</item>
        <item name="actionOverflowButtonStyle">@style/DotsLightTheme</item>
        <item name="android:colorBackground">@color/colorPrimaryLight</item>
        <item name="android:textColorPrimary">@color/grey900</item>
        <item name="drawableNavColor">@color/grey900</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <!-- Dark base activity theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">@color/colorPrimaryLight</item>
        <item name="secondaryTextColor">@color/colorPrimaryDarkLight</item>
        <item name="backgroundColor">@color/grey900</item>
        <item name="android:statusBarColor">@color/grey900</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="actionOverflowButtonStyle">@style/DotsDarkTheme</item>
        <item name="drawableNavColor">@color/white</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>


    <style name="FeedActivityThemeLight" parent="AppTheme.Light">
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
    </style>

    <style name="FeedActivityThemeDark" parent="AppTheme.Dark">
        <item name="android:windowBackground">@color/grey900</item>
    </style>

    <style name="DotsDarkTheme" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorPrimaryLight</item>
    </style>

    <style name="DotsLightTheme" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorPrimaryNight</item>
    </style>

    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>



</resources>
