<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item><layer-list>
    <item>
      <shape>
        <solid
          android:color="@color/grey900">
        </solid>

        <corners android:radius="4dp" />

        <padding
          android:top="0dp"
          android:bottom="0dp"
          android:left="8dp"
          android:right="8dp"/>
        <stroke
          android:width="2dp"
          android:color="@color/colorAccent"/>
      </shape>
    </item>
    <item
        android:gravity="center_vertical|right"
        android:drawable="@drawable/ic_round_arrow_drop_down_24px"
      />
  </layer-list></item>
</selector>