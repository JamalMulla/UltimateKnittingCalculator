<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp">

        <TextView
            android:padding="0dp"
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Calculator"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize">
    <TextView
        android:id="@+id/tv_num_stitches"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:text="No. current stitches"
        app:layout_constraintEnd_toStartOf="@+id/et_num_stitches"
        app:layout_constraintTop_toBottomOf="@+id/switch_mode" />
    <TextView
        android:id="@+id/tv_num_change"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="40dp"
        android:text="No. to increase"
        app:layout_constraintEnd_toStartOf="@+id/et_num_change"
        app:layout_constraintTop_toBottomOf="@+id/tv_num_stitches" />
    <EditText
        android:id="@+id/et_num_stitches"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="number"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/tv_num_stitches"
        app:layout_constraintTop_toBottomOf="@+id/switch_mode" />
    <EditText
        android:id="@+id/et_num_change"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/tv_num_change"
        app:layout_constraintTop_toBottomOf="@+id/et_num_stitches" />

    <android.support.design.button.MaterialButton
        android:id="@+id/btn_calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="Calculate"
        android:textColor="#fff"
        app:backgroundTint="#7b1fa2"
        app:layout_constraintEnd_toStartOf="@+id/btn_clear"
        app:layout_constraintTop_toBottomOf="@+id/tv_num_change" />

    <android.support.design.button.MaterialButton
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="Clear"
        app:strokeWidth="2dp"
        app:strokeColor="#7b1fa2"
        android:textColor="#7b1fa2"
        app:backgroundTint="#fff"
        app:layout_constraintStart_toEndOf="@+id/btn_calc"
        app:layout_constraintTop_toBottomOf="@+id/et_num_change" />

    <Switch
        android:id="@+id/switch_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increase"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintTop_toTopOf="@id/tv_num_stitches"/>
    <TextView
        android:id="@+id/tv_method1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Method1"
        app:layout_constraintTop_toBottomOf="@+id/btn_calc"
        app:layout_constraintBottom_toTopOf="@+id/tv_method2"
        tools:layout_editor_absoluteX="16dp" />
    <TextView
        android:id="@+id/tv_method2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Method2"
        app:layout_constraintTop_toBottomOf="@+id/tv_method1"
        tools:layout_editor_absoluteX="16dp" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>












